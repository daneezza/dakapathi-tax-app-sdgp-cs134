{
  "compilerOptions": {
    "target": "ES6",                                
    "module": "CommonJS",                            
    "allowSyntheticDefaultImports": true,              
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                    
    "skipLibCheck": true,                              
    "rootDir": "./src",                                
    "outDir": "./dist",                                
    "resolveJsonModule": true,                         
    "moduleResolution": "node"                        
  }
}
